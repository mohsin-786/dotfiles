pipeline {
  agent any
  tools {
    go 'go-1.17'
  }
  environment {
    GO111MODULE='on'
  }
  stages {
    stage('Test') {
      steps {
        git '<git repo>'
        sh 'go test ./...'
      }

    }
    stage('Build') {
      steps {
        git '<git repo>'
        sh 'go build .'
      }
    }
    stage('Run') {
      steps {
        git 'cd /var/lib/jenkins/workspace/<name of pipeline> && <build name from line 20>'
      }
    }

  }
}

