[global]
    monitor = 0
    width =  (300,500)
    origin = top-right
    offset = 21x48
    notification_limit = 0
    progress_bar = true
    progress_bar_height = 12
    progress_bar_frame_width = 1
    progress_bar_min_width = 150
    progress_bar_max_width = 300
    word_wrap = true
    indicate_hidden = yes
    transparency = 0
    separator_height = 5
    padding = 15
    horizontal_padding = 15
    text_icon_padding = 0
    frame_width = 3
    frame_color = "#050508"
    separator_color = frame
    sort = yes
    font = Sugar Snow 12
    line_height = 4
    markup = full
    # default
    format = "<b>%s</b>\n%b"
    alignment = center
    vertical_alignment = center
    show_age_threshold = 60
    ellipsize = middle
    stack_duplicates = true
    hide_duplicate_count = false
    icon_position = left
    ignore_newline = no
    show_indicators = no
    max_icon_size = 50
    sticky_history = yes
    history_length = 6
    dmenu = /usr/bin/dmenu -p dunst:
    browser =  /usr/bin/brave
    icon_path = /usr/share/icons/BeautyLine/apps/scalable
    always_run_script = true
    title = Dunst
    class = Dunst
    corner_radius = 5
    ignore_dbusclose = false
    force_xwayland = false
    force_xinerama = false
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

[experimental]
    per_monitor_dpi = true

[urgency_low]
    background = "#050508"
    foreground = "#cdd6f4"
    highlight  = "#cdd6f4"
    timeout = 5

[urgency_normal]
    background = "#050508"
    foreground = "#cdd6f4"
    highlight  = "#cdd6f4"
    timeout = 8

[urgency_critical]
    background = "#050508"
    foreground = "#cdd6f4"
    highlight  = "#cdd6f4"
    timeout = 10

[backlight]
    appname = "Backlight"
    highlight = "#fc7b80"
    timeout = 1
    new_icon =  ~/.config/dunst/icons/light.png
    
[Volume]
	appname = "changevolume"
	highlight = "#fc7b80"
	timeout = 1
	new_icon =  ~/.config/dunst/icons/volume.png
    
[Network (Connected)]
	desktop_entry = "org.freedesktop.network-manager-applet"
	summary = Connection Established
	timeout = 6
	new_icon = ~/.config/dunst/icons/wifi.png
	
[Network (Disconnected)]
	desktop_entry = "org.freedesktop.network-manager-applet"
	summary = Disconnected
	timeout = 6
	new_icon = ~/.config/dunst/icons/no-wifi.png
	
[Battery (AC on)]
	summary = Charging
	timeout  = 3
	new_icon = ~/.config/dunst/icons/battery-charging.png
	
[Battery (AC off)]
	summary = Discharging
	timeout  = 3
	new_icon = ~/.config/dunst/icons/battery-discharged.png
	
[Battery (Full)]
	summary = Full
	timeout  = 5
	new_icon = ~/.config/dunst/icons/battery-full.png
	

